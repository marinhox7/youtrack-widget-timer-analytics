{
  "$schema": "https://json.schemastore.org/youtrack-app.json",
  "name": "youtrack-timer-analytics-suite",
  "title": "YouTrack Timer Analytics Suite",
  "description": "Suite completa de analytics e monitoramento de timers para equipes e projetos",
  "version": "2.0.0",
  "icon": "icon.svg",
  "vendor": {
    "name": "Braip Development Team",
    "url": "https://braip.com",
    "email": "contato@braip.com"
  },
  "widgets": [
    {
      "key": "timer-dashboard-global",
      "name": "Timer Dashboard Global",
      "description": "Widget global para dashboards com timers ativos de toda organização",
      "extensionPoint": "DASHBOARD_WIDGET",
      "indexPath": "widgets/timer-dashboard/index.html",
      "permissions": [
        "READ_ISSUE",
        "READ_PROJECT",
        "PRIVATE_READ_ISSUE",
        "READ_USER"
      ],
      "defaultDimensions": {
        "width": "8fr",
        "height": "4fr"
      }
    }
  ],
  "httpHandlers": [
    {
      "path": "/api/timers",
      "handler": "backend.js"
    },
    {
      "path": "/api/stats",
      "handler": "backend.js"
    },
    {
      "path": "/api/health",
      "handler": "backend.js"
    }
  ]
}