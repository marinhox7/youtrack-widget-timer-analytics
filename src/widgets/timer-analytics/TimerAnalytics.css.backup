}

.status-badge.overtime {
  background-color: #6f42c1;
  color: #ffffff;
  border-color: #59359a;
}

/* Timer Actions */
.timer-actions {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  min-width: 90px;
}

/* Enhanced Admin Cancel Button */
.admin-cancel-timer-btn {
  background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%);
  color: #ffffff;
  border: 1px solid #e74c3c;
  border-radius: 6px;
  padding: 8px 12px;
  font-size: 11px;
  font-weight: 600;
  cursor: pointer;
  display: flex;
  align-items: center;
  gap: 4px;
  transition: all 0.3s ease;
  box-shadow: 0 2px 4px rgba(231, 76, 60, 0.2);
  min-width: 85px;
  justify-content: center;
  white-space: nowrap;
  position: relative;
  overflow: hidden;
}

.admin-cancel-timer-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.5s;
}

.admin-cancel-timer-btn:hover:not(:disabled) {
  background: linear-gradient(135deg, #c0392b 0%, #a93226 100%);
  transform: translateY(-2px);
  box-shadow: 0 4px 12px rgba(231, 76, 60, 0.4);
  border-color: #c0392b;
}

.admin-cancel-timer-btn:hover:not(:disabled)::before {
  left: 100%;
}

.admin-cancel-timer-btn:active:not(:disabled) {
  transform: translateY(0);
  box-shadow: 0 2px 6px rgba(231, 76, 60, 0.3);
}

.admin-cancel-timer-btn:disabled {
  background: #6c757d;
  cursor: not-allowed;
  opacity: 0.6;
  transform: none;
  box-shadow: none;
  border-color: #6c757d;
}

.admin-cancel-timer-btn .loading-spinner {
  animation: spin 1s linear infinite;
  display: inline-block;
  font-size: 12px;
}

.admin-cancel-timer-btn .admin-icon {
  font-size: 12px;
  filter: drop-shadow(0 1px 2px rgba(0, 0, 0, 0.3));
}

