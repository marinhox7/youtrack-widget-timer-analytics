/* CSS Reset and Isolation for YouTrack widget */
.widget-container {
  /* Reset all inherited styles */
  all: initial;

  /* Essential widget styles */
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif !important;
  font-size: 14px !important;
  line-height: 1.4 !important;
  color: #212529 !important;
  background-color: #ffffff !important;

  /* Layout */
  display: block !important;
  position: relative !important;
  width: 100% !important;
  height: 100% !important;
  min-height: 600px !important;
  overflow: hidden !important;

  /* Isolation */
  isolation: isolate !important;
  contain: layout style !important;

  /* Remove any inherited margins/padding */
  margin: 0 !important;
  padding: 0 !important;
  border: none !important;
}

/* Reset all child elements */
.widget-container *,
.widget-container *::before,
.widget-container *::after {
  /* Inherit essential properties from parent */
  font-family: inherit !important;
  font-size: inherit !important;
  line-height: inherit !important;

  /* Reset box model */
  box-sizing: border-box !important;
  margin: 0 !important;
  padding: 0 !important;
  border: 0 !important;
  outline: 0 !important;

  /* Reset positioning */
  position: static !important;

  /* Reset display (will be overridden by specific classes) */
  display: block !important;

  /* Reset colors and backgrounds */
  background: transparent !important;
  color: inherit !important;

  /* Reset text properties */
  text-decoration: none !important;
  text-transform: none !important;
  letter-spacing: normal !important;
  word-spacing: normal !important;

  /* Reset list styles */
  list-style: none !important;

  /* Reset form elements */
  appearance: none !important;
  -webkit-appearance: none !important;
  -moz-appearance: none !important;

  /* Reset animations */
  animation: none !important;
  transition: none !important;
  transform: none !important;
}

/* Restore necessary display properties */
.widget-container button {
  display: inline-block !important;
  cursor: pointer !important;
}

.widget-container select {
  display: inline-block !important;
  cursor: pointer !important;
}

.widget-container input {
  display: inline-block !important;
}

.widget-container a {
  display: inline !important;
  cursor: pointer !important;
}

.widget-container span {
